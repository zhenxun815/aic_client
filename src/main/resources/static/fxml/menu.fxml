<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tqhy.client.controllers.MenuController"
            stylesheets="@../css/fx_menu.css"
            styleClass="menu_pane"
            prefHeight="100.0" prefWidth="60.0">
    <VBox fx:id="menu_container">
        <HBox>
            <VBox.margin>
                <Insets>
                    <top>5</top>
                </Insets>
            </VBox.margin>
            <Label fx:id="item_kit" onMouseClicked="#openKit" styleClass="menu_label">工具箱
                <HBox.margin>
                    <Insets>
                        <left>10</left>
                    </Insets>
                </HBox.margin>
            </Label>
        </HBox>

        <HBox>
            <VBox.margin>
                <Insets>
                    <top>5</top>
                </Insets>
            </VBox.margin>
            <Label fx:id="item_setting" onMouseClicked="#openSetting" styleClass="menu_label">设置
                <HBox.margin>
                    <Insets>
                        <left>10</left>
                    </Insets>
                </HBox.margin>
            </Label>
        </HBox>

        <HBox>
            <VBox.margin>
                <Insets>
                    <top>5</top>
                </Insets>
            </VBox.margin>
            <Label fx:id="item_open" onMouseClicked="#openMainStage" styleClass="menu_label">打开
                <HBox.margin>
                    <Insets>
                        <left>10</left>
                    </Insets>
                </HBox.margin>
            </Label>
        </HBox>

        <HBox>
            <VBox.margin>
                <Insets>
                    <top>5</top>
                </Insets>
            </VBox.margin>
            <Label fx:id="item_exit" onMouseClicked="#exit" styleClass="menu_label">退出
                <HBox.margin>
                    <Insets>
                        <left>10</left>
                    </Insets>
                </HBox.margin>
            </Label>
        </HBox>

    </VBox>
</AnchorPane>
